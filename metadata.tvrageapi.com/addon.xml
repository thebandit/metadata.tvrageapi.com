<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="metadata.tvrageapi.com"
       name="TV Rage API"
       version="1.0.3"
       provider-name="XBMC Community">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper.tvshows"
             language="multi"
             library="tvrageapi.xml"
             cachepersistence="00:15"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Fetch TV show metadata from TV Rage API</summary>
    <description lang="en">This XBMC TV Scraper uses the TVRage.com API services for its show and episode data.</description>
    <platform>all</platform>
  </extension>
</addon>
